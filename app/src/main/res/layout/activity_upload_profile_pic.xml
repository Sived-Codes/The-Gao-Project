<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard.UploadProfilePic">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Your Profile Picture"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageView_profile_dp"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_321sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/profileuploadicon" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="99dp"
                android:layout_height="85dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:layout_marginStart="163dp"
                android:layout_marginBottom="2dp" />
        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap To Choose Image"
            android:layout_marginTop="@dimen/_20sdp"
            android:backgroundTint="@color/black"
            android:id="@+id/upload_pic_choose_button"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="@dimen/_110sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:text="Upload"
            android:id="@+id/upload_pic_button"
            android:backgroundTint="@color/purple_700"
            />





    </LinearLayout>

</ScrollView>