<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Dashboard.HomeFragment">

    <LinearLayout
        android:id="@+id/SarpanchF_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="350dp"
            android:layout_height="250dp">
            <WebView
                android:id="@+id/webview1"
                android:layout_width="350dp"
                android:layout_height="250dp" />
        </ScrollView>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pnchytBTNid"
            android:layout_width="159dp"
            android:layout_height="57dp"
            android:background="@drawable/rounded_btn"
            android:text="Panchayat" />

        <Space
            android:layout_width="12dp"
            android:layout_height="5dp"/>

        <Button
            android:id="@+id/electricBTNid"
            android:layout_width="159dp"
            android:layout_height="57dp"
            android:background="@drawable/rounded_btn"

            android:text="Electricity " />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="159dp"
            android:layout_height="57dp"
            android:background="@drawable/rounded_btn"
            android:text="Water Dept" />

        <Space
            android:layout_width="12dp"
            android:layout_height="5dp"/>

        <Button
            android:layout_width="159dp"
            android:layout_height="57dp"
            android:background="@drawable/rounded_btn"

            android:text="Press Media" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/educationBTNid"
            android:layout_width="159dp"
            android:layout_height="57dp"
            android:background="@drawable/rounded_btn"
            android:text="Education" />

        <Space
            android:layout_width="12dp"
            android:layout_height="5dp"/>

        <Button
            android:layout_width="159dp"
            android:layout_height="57dp"
            android:background="@drawable/rounded_btn"

            android:text="Transport" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="159dp"
            android:layout_height="57dp"
            android:background="@drawable/rounded_btn"
            android:text="Mp Online " />

        <Space
            android:layout_width="12dp"
            android:layout_height="5dp"/>

        <Button
            android:layout_width="159dp"
            android:layout_height="57dp"
            android:backgroundTint="@color/red"
            android:background="@drawable/red_rounded_btn"
            android:text="Be Aware" />

    </LinearLayout>

    </LinearLayout>

</ScrollView>