<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Dashboard.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_221sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_ProfileID"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/addpicicon"
            tools:ignore="ContentDescription,ImageContrastCheck,ImageContrastCheck" />

        <TextView
            android:id="@+id/textViewWLCM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="loading"
            android:textSize="@dimen/_20sdp"
            tools:ignore="HardcodedText" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/ic_profile"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_person"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textViewFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/ic_profile"
                android:layout_marginStart="50dp"
                android:hint="@string/loading"
                android:textColorHint="#78909C"
                android:textSize="20sp" />


            <View
                android:id="@+id/divider_name"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/textViewFullName"
                android:layout_marginTop="20dp"
                android:background="@android:color/darker_gray"
                />


            <ImageView
                android:id="@+id/ic_email"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_name"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_baseline_email_24"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView_show_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_name"
                android:layout_alignStart="@id/ic_profile"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:hint="@string/loading"
                android:textColorHint="#78909C"
                android:textSize="20sp" />

            <View
                android:id="@+id/divider_email"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/textViewFullName"
                android:layout_marginTop="20dp"
                android:background="@android:color/darker_gray" />


            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="75dp"
                android:layout_height="67dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="154dp"
                android:layout_marginTop="87dp"
                android:layout_marginEnd="143dp" />

            <ImageView
                android:id="@+id/ic_phone"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_phone"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_phone_icon"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView_show_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_phone"
                android:layout_alignStart="@id/ic_phone"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:hint="@string/loading"
                android:textSize="20sp" />

            <View
                android:id="@+id/divider_phone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/textView_show_email"
                android:layout_marginTop="20dp"
                android:background="@android:color/darker_gray" />


            <View
                android:id="@+id/divider_village"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/textView_show_phone"
                android:layout_marginTop="20dp"
                android:background="@android:color/darker_gray" />

            <ImageView
                android:id="@+id/ic_village"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_village"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_home"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView_show_village"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_village"
                android:layout_alignStart="@id/ic_village"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:hint="@string/loading"
                android:textSize="20sp" />

            <View
                android:id="@+id/end"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/textView_show_village"
                android:layout_marginTop="20dp"
                android:background="@android:color/darker_gray" />

        </RelativeLayout>



    </LinearLayout>




</ScrollView>