<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AssocUser.SahyojakWork.SahayojakQueryReceive">

    <RelativeLayout

        android:layout_width="match_parent"

        android:layout_height="60dp"

        android:background="#fff">

        <TextView

            android:id="@+id/usey2_sahyojak"

            android:layout_width="match_parent"

            android:layout_height="45dp"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/purple_700"
            android:gravity="center"
            android:text="Public Queries"
            android:importantForAutofill="no"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp">

        </TextView>

    </RelativeLayout>

    <ListView

        android:id="@+id/lvConversation2_sahyojak"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_above="@+id/form"

        android:layout_centerHorizontal="true"

        android:layout_marginLeft="10dp"

        android:layout_marginTop="55dp"

        android:layout_marginRight="10dp"

        android:divider="@null"

        android:dividerHeight="0dp"

        android:paddingBottom="10dp"

        android:text="" />



    <LinearLayout

        android:id="@+id/form"

        android:gravity="center"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"

        android:layout_marginBottom="@dimen/_10sdp"

        android:background="#91f1f1f1"

        android:orientation="vertical"

        android:paddingBottom="2dp" >


        <EditText

            android:id="@+id/etMessage2_sahyojak"

            android:layout_width="@dimen/_289sdp"

            android:layout_height="@dimen/_40sdp"/>


        <Button

            android:id="@+id/btnSendMsg2_sahyojak"

            android:layout_width="wrap_content"

            android:layout_height="47dp"

            android:background="@drawable/red_rounded_btn"

            android:backgroundTint="#29CC1F"

            android:text="Send"

            android:textColor="#fff" />

    </LinearLayout>




</RelativeLayout>