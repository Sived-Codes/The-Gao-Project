<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AssocUser.SarpanchWork.SarpanchDashboard">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/_10sdp"
      android:layout_marginBottom="@dimen/_90sdp"
      android:orientation="vertical"
      android:gravity="center">


      <ImageView
          android:layout_width="match_parent"
          android:layout_height="@dimen/_200sdp"
          android:src="@drawable/sarpanchdashboard">

      </ImageView>

      <Button
          android:id="@+id/sapanch_updateNotice_BTN"
          android:layout_width="@dimen/_240sdp"
          android:layout_height="@dimen/_40sdp"
          android:layout_marginTop="@dimen/_30sdp"
          android:text="Update Notice">
      </Button>

      <Button
          android:layout_width="@dimen/_240sdp"
          android:layout_height="@dimen/_40sdp"
          android:layout_marginTop="@dimen/_30sdp"
          android:text="Notice List">
      </Button>


      <Button
          android:id="@+id/sarpanch_query_receive_btn"
          android:layout_width="@dimen/_240sdp"
          android:layout_height="@dimen/_40sdp"
          android:layout_marginTop="@dimen/_30sdp"
          android:text="Public Queries/Inbox">

      </Button>

      <Button
          android:id="@+id/sarpanch_login_BTN"
          android:layout_width="@dimen/_240sdp"
          android:layout_height="59dp"
          android:layout_marginBottom="@dimen/_90sdp"
          android:layout_marginTop="@dimen/_30sdp"
          android:backgroundTint="@color/red"
          android:text="Log Out"
          android:textColor="#FFFFFF"
          android:textSize="14sp" />

  </LinearLayout>

</ScrollView>